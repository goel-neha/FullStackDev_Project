<!-----HandTools tab Content----->
<div id="HandTools" class="tabcontent" style="display:block">
  <!--<h3 style="padding-top:20px">All Hand Tools</h3>-->
  <div class="ui main text container">
     <div class="ui top attached segment">
         <div class="ui divided items">
 <% tools.forEach(function(tool){ %>
              <div class="item">
                  <div class="image">
                    <img src="<%= tool.image %>">
                  </div>
                  <div class="content">
                   <a class="header" href="/products/<%=tool._id %>"><%= tool.name %></a>
                   <div class="description">
                     <p>$ &nbsp;<%= tool.price %></p> 
                   </div>
                    <div class="extra">
                      <a class="ui floated basic blue button" href="/products/<%=tool._id %>">
                          More ...
                          <i class="right chevron icon"></i>
                      </a>
                    </div>
                   </div>
              </div>
            <% }) %>  
            
        </div>
     </div>
  </div>
  </div>

